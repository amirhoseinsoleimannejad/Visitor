<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.amhso.visitor.ExtendActivity">


    <TextView
        android:text="مهرباوکړئ د تمدیدېدلو کوډ وارد کړئ"
        android:layout_width="match_parent"
        android:padding="15dp"
        android:layout_gravity="right"
        android:gravity="right"
        android:textColor="@color/green"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/codeextended"
        android:layout_width="match_parent"
        android:hint="12685496653"
        android:textColor="@color/green"
        android:padding="15dp"
        android:layout_height="wrap_content" />




    <Button
        android:id="@+id/buttonextended"
        android:background="@color/green"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="extended"
        android:text="د ناروغ دوباره تمدیدېدل"/>


    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/condition"
        android:textColor="@color/green_light"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="wrap_content" />


</LinearLayout>
